<div class="form-group ">
    <label class="title mt-1">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control mt-1">
</div>
<div class="form-group">
    <label class="description mt-1">Description</label>
    <textarea name="description" id="description" class="form-control mt-1"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label required class="markdown mt-1">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control mt-1"><% article.markdown%></textarea>
</div>

<a href="/" class="btn btn-secondary mt-3 ">Cancel</a>
<button type="submit" class="btn btn-primary mt-3">Save</button>